    <swiper indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" style='width:100%;height:100%;margin-top:-45px;'>
  <block wx:for="{{imgUrls}}" wx:key='id'>
    <swiper-item style='margin-top:0;'>
