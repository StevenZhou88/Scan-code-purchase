.ShoppingBag{
  width: 100%;
  height: 320rpx;
  display: flex;
  flex-direction: column;
}
.ShoppingBag .ShoppingBag_top{
  width: 100%;
  height: 300rpx;
  flex: 1;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  font-size: 18px;
}
.ShoppingBag .ShoppingBag_buttom{
  width: 100%;
  height: 300rpx;
  flex: 2;
  display: flex;
  align-items: center;
}
.ShoppingBag .ShoppingBag_buttom view{
  height: 80%;
  width: 80%;
}
.ShoppingBag_buttom_left{
  border-right: 1px dotted gainsboro;
  display: flex;
}
.ShoppingBag_buttom_right{
  border-right: 1px dotted gainsboro;
  display: flex;
}
.ShoppingBag_buttom_left image{
  width: 130rpx;
  height: 130rpx;
  margin-left: 15px;
  margin-top: 8px;
}
.ShoppingBag_buttom_right image{
  width: 130rpx;
  height: 130rpx;
  margin-left: 15px;
  margin-top: 8px;
}

